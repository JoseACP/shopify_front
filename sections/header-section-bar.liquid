<div class="header-shipping-bar">
    <div class="container">
        New Header section
        {{ section.settings.shipping-text }}
    </div>
</div>

<style>
     .header-shipping-bar {
        color: #fff;
        text-align: center;
        padding: 8px;
        background-color: {{ section.settings.bg-color }};
        font-size: 14px;
    }

</style>
   

{% schema %}
    {
        "name": "Shipping Bar",
        "settings": [
            {
                "type": "text",
                "id": "shipping-text",
                "label": "Shipping Bar Text",
                "default": "Free shipping on orders over $50"
            },
            {
                "type": "color",
                "id": "bg-color",
                "label": "Background Color",
                "default": "#333"
            }
        ]
    }

{% endschema %}